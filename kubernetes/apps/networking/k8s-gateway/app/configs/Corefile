        apex k8s-gateway.networking
        resources Ingress Service
        ttl 300
        fallthrough ${SECRET_PUBLIC_DOMAIN}
    }
    forward ${SECRET_PUBLIC_DOMAIN} ${LAN_TRUSTED_GATEWAY_IP}
    cache 300
    loop
    reload
    loadbalance
